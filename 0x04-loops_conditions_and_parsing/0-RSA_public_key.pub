#!/usr/bin/env bash
# This script creates an RSA SSH key pair and saves the public key to a file.

# Generating the SSH key pair
ssh-keygen -t rsa -b 4096 -f "$HOME/.ssh/id_rsa" -N ""

# Ensuring the .ssh directory exists and has the correct permissions
mkdir -p "$HOME/.ssh"
chmod 700 "$HOME/.ssh"

# Outputting the public key to the specified file
cat "$HOME/.ssh/id_rsa.pub" > 0-RSA_public_key.pub

echo "RSA key pair created. Public key saved to 0-RSA_public_key.pub."
