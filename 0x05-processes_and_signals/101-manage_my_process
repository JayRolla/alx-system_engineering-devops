#!/usr/bin/env bash
# This script manages the manage_my_process script

case "$1" in
    start)
        manage_my_process_pid=$(pgrep -f "manage_my_process")
        if [ -z "$manage_my_process_pid" ]; then
            ./manage_my_process &
            manage_my_process_pid=$!
            echo "$manage_my_process_pid" > /var/run/my_process.pid
            echo "manage_my_process started"
        else
            echo "manage_my_process is already running"
        fi
        ;;
    stop)
        manage_my_process_pid=$(cat /var/run/my_process.pid)
        if [ -n "$manage_my_process_pid" ]; then
            kill "$manage_my_process_pid"
            rm /var/run/my_process.pid
            echo "manage_my_process stopped"
        else
            echo "manage_my_process is not running"
        fi
        ;;
    restart)
        $0 stop
        $0 start
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        ;;
esac
