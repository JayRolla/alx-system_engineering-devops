#!/usr/bin/env bash
# This script manages the my_process service. It can start, stop, or restart the process and handles PID files.

PID_FILE="/var/run/my_process.pid"
PROCESS_SCRIPT="manage_my_process"

function start_process {
    echo "Starting manage_my_process..."
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
        exit 1
    fi
    nohup bash $PROCESS_SCRIPT > /dev/null 2>&1 &
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

function stop_process {
    echo "Stopping manage_my_process..."
    if [ ! -f "$PID_FILE" ]; then
        echo "manage_my_process is not running."
        exit 1
    fi
    kill $(cat "$PID_FILE")
    rm -f "$PID_FILE"
    echo "manage_my_process stopped"
}

function restart_process {
    echo "Restarting manage_my_process..."
    stop_process
    start_process
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

